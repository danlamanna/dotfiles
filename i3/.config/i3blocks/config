[time]
command=date +'%b %d %I:%M'
interval=10

[mail]
command=~/.config/i3blocks/blocks/mail
interval=30  # marking emails as read doesn't signal, so an interval is needed
signal=1  # mbsync service triggers this signal
min_width=msg: 99

[batterybar]
command=~/.config/i3blocks/blocks/batterybar
label=bat:
interval=30
markup=pango
min_width=bat: ■■■■■
separator=true
